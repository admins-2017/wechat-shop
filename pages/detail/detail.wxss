.tabber{
  width: 100%;
  position: fixed;
  bottom: 0;
}

.top {
  width: 100%;
  height: 680rpx;
}

.top .img {
  width: 100%;
  height: 100%;
  display: flex;
}

.sku-pending{
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  margin: 10rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #333;
  padding: 0 30rpx;
}

.specs{
  display: flex;
}

.specs .text {
  color: #999;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.specs .content{
  font-size: 24rpx;
  color: #157658;
}

.explain{
  margin-top: 10rpx;
  background-color: #fff;
  padding: 20rpx 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.detail-img{
  display: flex;
  width: 100%;
}

/* 设置滚动高度 */
.main {
  width: 100%;
  /* 减去tab bar的高度 */
  height: calc(100vh - 100rpx);
}

/* 去除滚动条 */
::-webkit-scrollbar {
  display:none;
  width:0;
  height:0;
  color:transparent;
}

