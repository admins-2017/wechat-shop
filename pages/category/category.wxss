page{
  background-color: #fff;
}

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.search-container{
  width: 100%;
  display: flex;
  justify-content: center;
}

.search-btn {
  background-color: #f1f1f1 !important;
  color: #C4C9D2 !important;
  font-size: 24rpx !important;
  font-weight: 400 !important;
  border-radius: 4rpx !important;
}

.main {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  border-top: 2rpx solid #f3f3f3;
  height: calc(100vh - 82rpx);
}

.left{
  height: 100%;
  width: 20%;
}

.testClass{
  height: 100%;
}

.item-active{
  color: #157658 !important;
  font-size: 26rpx !important;
}

.item-inactive{
  color: #666 !important;
  background-color: #fff !important;
  font-size: 26rpx !important;
}

.item-line{
  width: 8rpx !important;
  height: 40rpx !important;
  background-color: #157658 !important;
  border-radius: 0 !important;
}

.right {
  /* flex: 1; */
  width: 588rpx;
  display: flex;
  justify-content: center;
  border-left: 2rpx solid #f3f3f3;
  margin-left: 5rpx;
}

/* 不显示滚动条 */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}