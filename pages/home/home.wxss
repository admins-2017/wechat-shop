page {
  background-color: #f5f5f5;
}

.main>.theme {
  width: 100%;
  height: 260rpx;
  /*去除图片自带的间距，解决图片自带的下边距*/
  display: flex;
}

.swiper {
  width: 100%;
  height: 360rpx;
}

.grid {
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
}

.grid>.flex {
  border: 2rpx dashed #157658;
  display: flex;
  flex-wrap: wrap;
}

.flex>.items {
  height: 170rpx;
  width: 33.3%;
}

.items>.item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.item-img {
  width: 80rpx;
  height: 80rpx;
}

.item-title {
  font-size: 26rpx;
  font-weight: 700;
  padding-top: 10rpx;
}

.activity {
  width: 100%;
  height: 310rpx;
  margin-top: 20rpx;
}

.spu-scroll-class{
  margin-top: 20rpx;
}

.quality {
  margin: 20rpx 0;
  width: 100%;
  height: 880rpx;
  /* 消除图片默认间距 设置flex*/
