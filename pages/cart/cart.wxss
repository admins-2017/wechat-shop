.container{
  margin-bottom: 88rpx;
  height: calc(100vh - 88rpx);
}

/* 去除滚动条 */
/* 不显示滚动条 */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.empty-container {
  display: flex;
  width: 100%;
  height: 700rpx;
  align-items: center;
  justify-content: center;
}

.total-container {
  box-sizing: border-box;
  width: 100%;
  height: 88rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 4px 0px rgba(210, 210, 210, 0.5);
  position: fixed;
  bottom: 0;
  padding-left: 30rpx;
  display: flex;
  justify-content: space-between;
  z-index: 99;
}

.data-container {
  display: flex;
  flex: 1 1 auto;
  align-items: center;
  justify-content: space-between;
}

.checkbox-container {
  display: flex;
  align-items: center;
}

.all {
  font-size: 22rpx;
  margin-left: 30rpx;
}

.price-container {
  display: flex;
  padding-right: 30rpx;
  justify-content: center;
  align-items: center;
}

.price-container>view {
  font-size: 26rpx;
  margin-right: 20rpx;

}

.settlement-btn {
  width: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #157658;
  color: #fff;
  font-size: 26rpx;

}