page{
  background-color: #f5f5f5;
}

.top-image{
  width: 100%;
  height: 400rpx;
  display: flex;
}

.content{
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  position: relative;
  top: -40rpx;
}

.detail{
  background-color: #fff;
  display: flex;
  padding: 30rpx;
  box-sizing: border-box;
  height: 260rpx;
  border-bottom: 2rpx solid #f5f2f2;
  box-shadow: 0rpx 50rpx 60rpx #dddddd;
}

.left{
  width: 40%;
    height: 100%;
}

.right{
  flex: 1;
  margin-left: 40rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.top{
  margin-top: 10rpx;
}

.bottom{
  display: flex;
  justify-content: space-between;
}

.button{
  height: 60rpx;
  width: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #157658;
  color: #fff;
  font-size: 26rpx;
}