.top-image {
  width: 100%;
  display: flex;
}

.content {
  width: 100%;
  height: 401rpx;
  background: #fff;
  margin-top: 20rpx;
  position: relative;
}

.content-img {
  width: 100%;
  height: 100%;
  display: flex;
}

.detail {
  z-index: 999;
  position: absolute;
  top: 30rpx;
  right: 50rpx;
  width: 40%;
  background-color: #fff;
  height: 75%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
}

.name {
  font-size: 26rpx;
  font-weight: 600;
}

.title {
  font-size: 24rpx;
  color: #847d7d;
  font-weight: 300;
  margin-top: 20rpx;
}

.botton{
  width: 160rpx;
  height: 60rpx;
  background-color: #000;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  margin-top: 15rpx;
}