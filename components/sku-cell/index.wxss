
.container {
  height: 60rpx;
  border: 2rpx solid #333;
  padding: 2rpx;
  box-sizing: border-box;
}

.inner-container {
  height: 100%;
  padding: 0rpx 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  font-size: 24rpx;
}

/* 设置禁用的样式 */
.forbidden {
  border: 2rpx dashed #bbb;
  color: #bbb;
}

/* 选中样式的外边框 */
.selected-outer{
  border: 2rpx solid #157658;
  color: #fff;
}

/* 选中样式的内边 */
.selected-inner{
  background-color: #157658;
}

.img {
  display: flex;
  width: 44rpx;
  height: 44rpx;
  margin-right: 10rpx;
}