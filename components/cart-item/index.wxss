.container {
  box-sizing: border-box;
  width: 100%;
  height: 220rpx;
  display: flex;
  padding: 30rpx;
  border-top: 2rpx solid #f3f3f3;
  background-color: #fff;
  border-bottom: 2rpx solid #f5f5f5;
}

.checkbox{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

.sku-container{
  position: relative;
  height: 160rpx;
  flex: 1 1 auto;
  display: flex;

}

.image-container{
  /* 开启相对定位 */
  position: relative;
  height: 160rpx;
  width: 160rpx;
  margin-right: 20rpx;
}

.left{
  width: 100%;
  height: 100%;
}

.image-sold-out{
  background: #157658;
  /* 相对于父类定位 父类开启relative */
  position: absolute;
  width: 100%;
  height: 100%;
  /* 透明度 */
  opacity: 0.5;
  color: #FFF;
  display: flex;
  justify-content: center;
  align-items: center;

}

.image-stock-pinch{
  background: #157658;
  /* 相对于父类定位 父类开启relative */
  position: absolute;
  width: 100%;
  height: 20%;
  /* 透明度 */
  opacity: 0.5;
  color: #FFF;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  bottom: 0;
}

.right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
}

.description-container{
  
}

.title-container{
  display: flex;
  align-items: center;
}

.discount-tag{
  width: 40rpx;
  margin-right: 15rpx;
}

.title{
  font-size: 26rpx;
}

.price-container{
  display: flex;
  justify-content: space-between;
}

.spec{
    margin-top: 10rpx;
}

.sold-out{
  position: absolute;
  width: 100%;
  height: 100%;
  background: #f3f3f3;

  opacity: 0.5;
}

.slide{
  width: 200rpx;
  height: 220rpx;
  color: #FFF;
  background-color: #9E2731;
  display: flex;
  justify-content: center;
  align-items: center;
}