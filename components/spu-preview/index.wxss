.container {
  width: 340rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0rpx 0rpx 8rpx 0rpx rgba(119, 163, 149,0.2);
  margin-bottom: 20rpx;
  background-color: #fff;
}


.img {
  width: 100%;
  /* image 设置了widthFix height则无效 */
  /* height: 360rpx; */
}

.content-container{
  display: flex;
  flex-direction: column;
  padding: 16rpx 16rpx 22rpx ;
}

.l-tag{
  background-color: #DCEBE6 !important;
  color: #157658 !important;
  height: 36rpx !important;
  padding: 8rpx 6rpx !important;
  margin-right: 6rpx;
}

.title {
  font-size: 28rpx;
  color: #333;
}

.price-row{
  display: flex;
}

.discount-class{
  margin-left: 20rpx;
}

.tags{
