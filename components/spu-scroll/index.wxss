.container{
    width: 100%;
    padding: 42rpx 0 34rpx 28rpx;
    box-sizing: border-box;
    background-color: #fff;
}

.title {
    width: 694rpx;
    height: 90rpx;
}

.srcoll{
    display: flex;
    /* 水平布局 */
    align-items: center;
    margin-top: 28rpx;
}

.detail {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 60rpx;
}

.detail .img {
    width: 160rpx;
    height: 160rpx;
}

.detail .text{
    font-size: 20rpx;
    margin-top: 20rpx;
    color: #666;

    /* 只展现一行 多的隐藏 必须要有宽度 不然会撑开 
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    */
}