/* components/tab-bar/index.wxss */

/* 与l-icon的字体格式区分的外部样式 必须写在组件样式中 */
.sleeve {
  font-family: sleeve !important;
 }
 
 .container {
   height: 100rpx;
   width: 100%;
   display: flex;
   background-color: #fff;
   justify-content: space-between;
 }

 .icons{
   box-sizing: border-box;
   padding-left: 16rpx;
   padding-right: 22rpx;
   display: flex;
   align-items: center;
   justify-content: space-between;
   width: 230rpx;
   height: 100%;
   color: #999;
 }

.icons > view{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.icons > view:nth-of-type(2){
  padding-top: 2rpx;
}


.icons >view > .text {
  padding-top: 6rpx;
  font-size: 20rpx;
}

.btn-font{
  color: #fff;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cart{
  background-color: #333;
  width: 260rpx;
  height: 100%;
}

.buy{
  background-color: #157658;
  width: 260rpx;
  height: 100%;
}