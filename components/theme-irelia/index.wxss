.sleeve {
  font-family: sleeve !important;
 }

 .container {
  display: flex;
  flex-direction: column;
 }

 .top-image{
   width: 100%;
   height: 500rpx;
 }

 .content{
  background-color: #fff;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  height: 300rpx;
 }

 .spu-img{
  width: 300rpx;
  height: 300rpx;
 }

 .detail{
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 50rpx;
 }

 .top .name{
  margin-top: 50rpx;
  font-size: 32rpx;
  font-weight: 500;
 }

 .top .title{
  font-size: 24rpx;
  color: #949494;
  margin-top: 20rpx;
 }

.botton{
  height: 80rpx;
  width: 80rpx;
  background-color: #157658;
  display: flex;
  justify-content: center;
  align-items: center;
}


.right-detail{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 50rpx;
}

.right-spu-img{
  width: 300rpx;
  height: 300rpx;
}