page {
  background-color: #f5f5f5;
}

.container{
  padding-left: 30rpx;
  box-sizing: border-box; 
  background-color: #fff; 
  /* 设置最大高度和最小高度 */ 
  max-height: 800rpx;
  min-height: 500rpx;
  margin-bottom: 100rpx;
  /* 小程序的滚动不要设置成overflow */
  /* overflow-y: auto;
  overflow-x: hidden; */
}

.sku-preview{
  margin-top: 30rpx;
  display: flex;
  margin-bottom: 20rpx;
}

.sku-img {
  width: 160rpx;
  height: 160rpx;
}

.inner-container{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 40rpx;
}

.discount-price{
  margin-left: 20rpx;
}

.price-row{
  display: flex;
  align-items: flex-end;
}

.sku-pending{
  display: flex;
  font-size: 20rpx;
}

.sku-pending >view:nth-of-type(1){
  color: #999;
}

.sku-pending >view:nth-of-type(2){
  color: #666;
}

.hr{
  width: 690rpx;
  height: 2rpx;
  background-color: #E9E9E9;
}

.stock {
  margin-left: 30rpx;
  font-size: 20rpx;
  color: #999;
}

.stock-pinch{
  margin-left: 30rpx;
  font-size: 20rpx;
  color: #D20109;
} 

.text {
  display: flex;
}

.counter-container{
  margin-top: 34rpx; 
  padding-right: 30rpx;
  display: flex; 
  align-items: center;
  justify-content: space-between;
  padding-bottom: 200rpx;
}

.counter-container .counter-text{
  color: #555;
  font-size: 24rpx;
}

.bottom-btn{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: #333;
  position: absolute;
  bottom: 0;
  z-index: 999;
}

.out-stock {
  background-color: #DCEBE6;
}

.bottom-btn > view:nth-of-type(1){
  color: #fff;
}