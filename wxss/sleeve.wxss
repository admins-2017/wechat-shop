/* 下移view 动画 */
.react-hover {
    position: relative;
    top: 2rpx;
    left: 2rpx;
    box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.1) inset; 
}

/* 小缩放 */
.small-hover {
    /* 透明度 */
    opacity: 0.9;
    /* 缩放大小 */
    transform: scale(0.98 , 0.98);
}

/* 中等缩放 */
.medium-hover {
    opacity: 0.8;
    transform: scale(0.75 , 0.75);
}

/* 点击透明动画 */
.opacity-hover{
    opacity: 0.7;
}

/* 大缩放 */
.big-hover {
    opacity: 0.8;
    transform: scale(0.5 , 0.5);
}